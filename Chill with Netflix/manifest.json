{
	"manifest_version": 2,

	"name": "Chill with Netflix",
	"description": "Relax with an interface assistant for Netflix",
	"version": "0.1",

	"browser_action": {
		"default_popup": "src/popup.html",
		"default_icon": {
			"38" : "images/38.png",
			"19" : "images/19.png"
		}
	},
	"options_ui" : {
		"page": "src/options.html",
		"chrome_style": true
	},

	"icons": {
		"128": "images/128.png",
		"38" : "images/38.png",
		"19" : "images/19.png"
	},
	"permissions": [
		"unlimitedStorage",
		"notifications",
		"activeTab",
		"https://*.netflix.com/*",
		"http://*.netflix.com/*"
	]
}