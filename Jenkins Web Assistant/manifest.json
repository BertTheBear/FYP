{
	"manifest_version": 2,

	"name": "Jenkins Web Assistant",
	"description": "Adaptive interface assistant for Chrome. Can be manually configured or granted access to recognise browsing patterns.",
	"version": "0.3",
	"version_name": "ALPHA (in Development)",

	"browser_action": {
		"default_popup": "src/popup.html",
		"default_icon": {
			"38" : "images/38.png",
			"19" : "images/19.png"
		}
	},
	"options_ui" : {
		"page": "src/options.html",
		"chrome_style": true
	},
	"background": {
		"scripts": ["src/background.js"]
	},

	"icons": {
		"128": "images/128.png",
		"64" : "images/64.png",
		"38" : "images/38.png",
		"19" : "images/19.png"
	},
	"permissions": [
		"unlimitedStorage",
		"storage",
		"notifications",
		"activeTab",
		"tabs",
		"bookmarks",
		"browsingData",
		"identity",
		"topSites",
		"history"
	]
}